<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".melaplan_type">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/reactangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="91dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center"
            android:background="@drawable/back_foreground"
            >
        </ImageButton>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        \
        <ImageButton
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center"
            android:background="@drawable/home_foreground"
            >

        </ImageButton>

    </LinearLayout>


    <View
        android:id="@+id/rectangle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-80dp"
        android:background="@drawable/oneradisrangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/text3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/meal_plan_type"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_2" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1">

        <LinearLayout
            android:id="@+id/heart"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@drawable/shadow">
            <View
                android:layout_width="120dp"
                android:layout_gravity="left"
                android:layout_height="match_parent"
                android:background= "@drawable/roundedbackground"
                android:foreground="@drawable/meal_foreground"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Meal Plan"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/text_brown"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Generate your Meal Plan"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/text_brown_light"
                    android:textStyle="normal"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/diabetes"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@drawable/shadow">
            <View
                android:layout_width="120dp"
                android:layout_gravity="left"
                android:layout_height="match_parent"
                android:background= "@drawable/roundedbackground"
                android:foreground="@drawable/meal_foreground"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diabetes Meal Plan"
                    android:textSize="22sp"

                    android:textAlignment="center"
                    android:textColor="@color/text_brown"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Generate your Meal Plan"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/text_brown_light"
                    android:textStyle="normal"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>